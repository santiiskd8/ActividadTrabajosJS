//En el club de Monte Grande tiene dentro de un array los deportes futbol y basquet , dentro del array hacer una funcion que añada a ese array el deporte voley //

// Array inicial de deportes en el club de Monte Grande
let deportesClubMonteGrande = ["futbol", "basquet"];

// Función para añadir un nuevo deporte al array
function añadirDeporte(deporte) {
    deportesClubMonteGrande.push(deporte);
}

// Añadir el deporte "voley"
añadirDeporte("voley");

// Mostrar el array actualizado en la consola
console.log(deportesClubMonteGrande); // ['futbol', 'basquet', 'voley']
